<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
		<p><%= link_to user.name, user_path(user) %></p>
		<% if user.avatar.attached? %>
			<%= image_tag url_for(user.avatar), size:'100x100', style: 'float:left'%>
		<% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
